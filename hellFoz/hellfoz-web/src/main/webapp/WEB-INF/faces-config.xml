<?xml version="1.0" encoding="UTF-8"?>

<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<application>
	
		<!-- injection de spring -->
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		
		<!-- internacionalizacion -->
		<locale-config>
     		<default-locale>es</default-locale>
     	</locale-config>
		<resource-bundle>
			<base-name>hellfoz.web.i18n.msg</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>noticias</from-outcome>
			<to-view-id>/paginas/noticias.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>noticia</from-outcome>
			<to-view-id>/paginas/noticia.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>bandas</from-outcome>
			<to-view-id>/paginas/bandas.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>compras</from-outcome>
			<to-view-id>/paginas/compras.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>horarios</from-outcome>
			<to-view-id>/paginas/horarios.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>llegar</from-outcome>
			<to-view-id>/paginas/llegar.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>acampada</from-outcome>
			<to-view-id>/paginas/acampada.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>registroAcampada</from-outcome>
			<to-view-id>/paginas/compras.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>entradas</from-outcome>
			<to-view-id>/paginas/entradas.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-outcome>imprimirEntrada</from-outcome>
			<to-view-id>/paginas/imprimirEntrada.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		
		
	</navigation-rule>
	
</faces-config>
